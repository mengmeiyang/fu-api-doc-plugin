<idea-plugin>
    <id>com.wdf.api</id>
    <name>Fu Doc</name>
    <version>1.3.0</version>
    <vendor email="wangdingfu1024@163.com" url="https://github.com/wangdingfu">WANG DINGFU</vendor>

    <description>
        <![CDATA[ Description will be added by gradle build]]>
    </description>

    <!-- please see https://plugins.jetbrains.com/docs/intellij/build-number-ranges.html for description -->
    <!-- idea版本需要大于2021.1 -->
    <idea-version since-build="212.4746.92"/>

    <!-- please see https://plugins.jetbrains.com/docs/intellij/plugin-compatibility.html
         on how to target different products -->
    <depends>com.intellij.modules.platform</depends>
    <depends>com.intellij.modules.java</depends>

    <extensions defaultExtensionNs="com.intellij">
        <!-- 应用启动时通知类 -->
        <backgroundPostStartupActivity implementation="com.wdf.fudoc.start.FuDocAppStartUpListener"/>

        <!-- Add your extensions here -->
        <notificationGroup id="com.wdf.fudoc.notification.group" displayType="BALLOON"/>
        <notificationGroup id="com.wdf.fudoc.notification.start.group" displayType="BALLOON"/>


        <!-- 应用级别的service（所有项目都是这一个实例 不跟项目隔离） 项目级别的service则使用projectService标签 -->
        <applicationService serviceImplementation="com.wdf.fudoc.apidoc.config.state.FuDocSetting"/>
        <applicationService serviceImplementation="com.wdf.fudoc.apidoc.config.state.FuDocSecuritySetting"/>
        <applicationService serviceImplementation="com.wdf.fudoc.apidoc.parse.FuDocClassParserImpl"/>

        <applicationService serviceImplementation="com.wdf.fudoc.apidoc.assemble.impl.ControllerAssembleService"/>
        <applicationService serviceImplementation="com.wdf.fudoc.apidoc.assemble.impl.InterfaceAssembleService"/>
        <applicationService serviceImplementation="com.wdf.fudoc.apidoc.assemble.impl.FeignAssembleService"/>

        <applicationService serviceImplementation="com.wdf.fudoc.apidoc.mock.FuDocObjectJMockData"/>


        <projectConfigurable instance="com.wdf.fudoc.apidoc.config.configurable.FuDocSettingConfigurable"
                             id="fu.doc.setting"
                             displayName="Fu Doc"
                             nonDefaultProject="true"/>

        <projectConfigurable instance="com.wdf.fudoc.apidoc.config.configurable.FuDocGeneralConfigurable"
                             id="fu.doc.setting.general"
                             groupId="fu.doc.setting"
                             displayName="General"
                             nonDefaultProject="true"/>

        <toolWindow id="Fu Request"
                    icon="FuDocIcons.FU_DOC"
                    anchor="right"
                    secondary="false"
                    doNotActivateOnStart="true"
                    order="last"
                    factoryClass="com.wdf.fudoc.request.view.toolwindow.FuDocToolWindowFactory"/>


<!--        <iw.actionProvider implementation="com.wdf.fudoc.request.action.editor.FormatActionProvider"/>-->

        <editorFloatingToolbarProvider
                order="after DefaultFloatingToolbarProvider"
                implementation="com.wdf.fudoc.request.action.editor.FuDocEditorFloatingToolbarProvider"
                id="FuDocEditorFloatingToolbarProvider"/>
    </extensions>

    <actions>

        <!-- 接口文档相关动作 -->
        <group id="wdf.fudoc.apidoc" popup="false" compact="true">
            <add-to-group group-id="EditorPopupMenu" anchor="first"/>
            <action id="gen-api-doc" class="com.wdf.fudoc.apidoc.action.GenFuDocAction" text="Fu Doc">
                <keyboard-shortcut keymap="$default" first-keystroke="alt D"/>
            </action>
        </group>

        <!-- 测试功能点相关动作 -->
        <group id="wdf.fudoc.test" popup="false" compact="true">
            <action id="com.fudoc.test.request" class="com.wdf.fudoc.request.action.TestAction" text="Test" description="Test"/>
            <action id="com.fudoc.test.table" class="com.wdf.fudoc.request.action.TestTableAction" text="Test Table"
                    description="Test table"/>
        </group>



        <!-- 工具相关动作 -->
        <group id="wdf.fudoc.futool" text="Fu Tool" popup="true" compact="true">
            <add-to-group group-id="wdf.fudoc.apidoc" anchor="last"/>
            <action id="com.fudoc.toJson" class="com.wdf.fudoc.futool.beantojson.action.BeanToJsonAction" text="Bean to Json"
                    description="Bean to json">
                <keyboard-shortcut keymap="$default" first-keystroke="ctrl shift D"/>
            </action>
            <action id="com.fudoc.dto.gen" class="com.wdf.fudoc.futool.dtoconvert.action.Vo2DtoGenerateAction" text="Bean Copy"
                    description="Bean copy">
                <keyboard-shortcut keymap="$default" first-keystroke="ctrl shift G"/>
            </action>
        </group>


        <!-- 接口请求工具栏相关动作  -->
        <group id="fu.doc.request.tool.window.action">
            <action id="fu.doc.request.tool.window.action.refresh"
                    class="com.wdf.fudoc.request.action.windows.FuRequestRefreshAction"
                    text="Refresh" description="Refresh" icon="AllIcons.Actions.Refresh"/>
            <action id="fu.doc.request.tool.window.action.send"
                    class="com.wdf.fudoc.request.action.windows.FuRequestSendAction"
                    text="Stop Request" description="Stop request" icon="AllIcons.Actions.Suspend"/>
            <action id="fu.doc.request.tool.window.action.stop"
                    class="com.wdf.fudoc.request.action.windows.FuRequestStopAction"
                    text="Send Request" description="Send request" icon="AllIcons.Actions.Suspend"/>
            <action id="fu.doc.request.tool.window.action.setting"
                    class="com.wdf.fudoc.request.action.windows.FuRequestSettingAction"
                    text="Setting" description="Setting" icon="AllIcons.General.Settings"/>
        </group>

        <!-- 魔法棒格式化json动作  -->
        <group id="fu.doc.editor.format">
            <action id="fu.doc.format" class="com.wdf.fudoc.request.action.editor.FuEditorFormatAction"/>
        </group>
    </actions>

</idea-plugin>